#----------------------------------------------------------------
# General simulation parameters

Continue previous simulation: 0
Number of spatial dimensions: 3
Number of time steps: 10
Time step size: 0.01

#Simulation initialization file path: partitioned/fluid.vtu

Save results to VTK format: 1
Name prefix of saved VTK files: steady
Increment in saving VTK files: 1
Start saving after time step: 1
Save results in folder: steady

Increment in saving restart files: 1
Convert BIN to VTK format: 0

Verbose: 1
Warning: 0
Debug: 0

#----------------------------------------------------------------
# Mesh data
Add mesh: fluid {
#   Mesh file path: mesh_tube_fsi/fluid/mesh-complete.mesh.vtu
   Mesh file path: partitioned/fluid.vtu
   Add face: f_interface {
      Face file path: mesh_tube_fsi/fluid/mesh-surfaces/interface.vtp
   }
   Add face: f_start {
      Face file path: mesh_tube_fsi/fluid/mesh-surfaces/start.vtp
   }
   Add face: f_end {
      Face file path: mesh_tube_fsi/fluid/mesh-surfaces/end.vtp
   }
   Domain: 0
}

#----------------------------------------------------------------
# Equations
Add equation: fluid {
   Coupled: 0
   Min iterations: 1
   Max iterations: 10
   Tolerance: 1e-3

   Density: 1.06e-6
   Viscosity: Constant {Value: 4e-6}
   Backflow stabilization coefficient: 0.2

   LS type: GMRES {
      Preconditioner: Trilinos-ILUT
#      Preconditioner: Trilinos-ML # slow
#      Preconditioner: Trilinos-Diagonal # slow
#      Preconditioner: Trilinos-ICT
      Tolerance: 1e-3
      Max iterations: 200
#      Krylov space dimension: 100
   }

   Output: Spatial {
#      Velocity: t
#      Pressure: t
#      Acceleration: t
      WSS: t
   }

   # fluid: inflow
   Add BC: f_start {
      Type: Dir
      Impose flux: t
      Time dependence: Unsteady
      Temporal values file path: steady_flow.dat
      Profile: User_defined
      Spatial profile file path: inflow_profile.dat
   }

   # fluid: no slip
   Add BC: f_interface {
      Type: Dir
      Time dependence: Steady
      Value: 0.0
      Zero out perimeter: f
   }

   # fluid: outflow pressure
   Add BC: f_end {
      Type: Neu
      Time dependence: Unsteady
      Temporal values file path: steady_pressure.dat
   }
}
